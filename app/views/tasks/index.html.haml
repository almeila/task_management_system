= t('view.tasks.task_count', count: @tasks.count)

%div 
  = link_to t('view.tasks.new'), new_task_path

- @tasks.each do |task| 
  %div
    = task.title
    = task.status
    = task.end_period
    = link_to t('view.tasks.edit') , edit_task_path(task)
    = link_to t('view.tasks.delete') , task, method: :delete, data: { confirm: t('view.tasks.delete_confirm', title: task.title) }
    